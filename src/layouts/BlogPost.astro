---
import { getImage, Image } from 'astro:assets';
import type { CollectionEntry } from 'astro:content';
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import FormattedDate from '../components/FormattedDate.astro';
import Header from '../components/Header.astro';

type Props = CollectionEntry<'blog'>['data'];

const { title, description, pubDate, updatedDate, heroImage, socialImage } =
	Astro.props;

// This logic remains the same. It correctly determines the image.
const imageForSocials = socialImage ?? heroImage;

const optimizedImage = imageForSocials
	? await getImage({
			src: imageForSocials,
			width: 1200,
			height: 630,
			format: 'png',
	  })
	: null;

const absoluteImageUrl = optimizedImage
	? new URL(optimizedImage.src, Astro.site).href
	: null;
---

<html lang="en">
	<head>
		<!--
		  THE FIX IS HERE:
		  We pass the `absoluteImageUrl` string into the `image` prop of BaseHead.
		  If there's no image for the post, we pass `undefined` so BaseHead can use its fallback.
		-->
		<BaseHead
			title={title}
			description={description}
			image={absoluteImageUrl ?? undefined}
		/>

		<!-- REMOVE ALL the old, duplicate meta tags from this file. -->

		<style>
			/* ... your styles ... */
		</style>
	</head>

	<body>
		<Header />
		<main>
			<article>
				<div class="hero-image">
					{heroImage && <Image width={1920} height={1080} quality="max" src={heroImage} alt="" />}
				</div>
				<div class="prose">
					<div class="title">
						<div class="date">
							<FormattedDate date={pubDate} />
							{
								updatedDate && (
									<div class="last-updated-on">
										Last updated on <FormattedDate date={updatedDate} />
									</div>
								)
							}
						</div>
						<h1>{title}</h1>
						<hr />
					</div>
					<slot />
				</div>
			</article>
		</main>
		<Footer />
	</body>
</html>